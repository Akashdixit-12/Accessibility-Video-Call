{
  "manifest_version": 3,
  "name": "WebRTC Video Call for Deaf Users",
  "version": "1.0",
  "description": "A WebRTC-based video calling system with real-time captioning and sign language support for deaf users.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "signLanguageDictionary.js", "injected.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
